{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check: Duplicati (rotte + funzioni)",
      "type": "shell",
      "command": "node",
      "args": ["scripts/check-duplicates.js"],
      "group": "build",
      "problemMatcher": {
        "owner": "dup-check",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s(\\[[^\\]]+\\])\\s(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Fix: Duplicati",
      "type": "shell",
      "command": "node",
      "args": ["scripts/check-duplicates.js", "--fix"]
    },
    {
      "label": "Dup: Fix+Check",
      "dependsOrder": "sequence",
      "dependsOn": ["Fix: Duplicati", "Check: Duplicati (rotte + funzioni)"]
    },
    {
      "label": "Dup: Watch (auto)",
      "type": "shell",
      "command": "node",
      "args": ["scripts/dup-watch.js"],
      "isBackground": true,
      "runOn": "folderOpen",
      "presentation": { "reveal": "never", "panel": "dedicated" }
    }
  ]
}